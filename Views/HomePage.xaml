<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FoodAndDrinkApp.Views"
             xmlns:local="clr-namespace:FoodAndDrinkApp.Views"
             x:Class="FoodAndDrinkApp.Views.HomePage"
             BackgroundColor="#f5f5f5">

    <Grid RowDefinitions="Auto, *">
        <!-- Top Navigation Bar -->
            <Grid Padding="0,5,0,0"
                  ColumnDefinitions="*,Auto"
                  RowDefinitions="Auto,2"
                  BackgroundColor="Transparent"
                   Grid.Row="0">

                <Label Text="FlavourNest"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Center"
                       Margin="20,5,0,5"
                       />

                <Button x:Name="AddButton"
                        Text="+ Add"
                        Clicked="OnAddRecipeClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        Padding="15,0,15,0"
                        FontSize="16"
                        VerticalOptions="Center"
                        Grid.Column="1" 
                        Margin="15,10,15,5"
                        />

                <!-- Bottom Border -->
                <BoxView Grid.Row="1"
                         Grid.ColumnSpan="2"
                         HeightRequest="1"
                         Color="LightGray" 
                         Margin="0,10,0,10"
                        />

                <!-- Optional Shadow -->
                <BoxView Grid.Row="1"
                         Grid.ColumnSpan="2"
                         HeightRequest="3"
                         Color="Transparent">
                    <BoxView.Shadow>
                        <Shadow Brush="Gray"
                                Opacity="0.2"
                                Offset="0,2"
                                Radius="4" />
                    </BoxView.Shadow>
                </BoxView>
            </Grid>

            <!-- Recipe Grid -->
        <ScrollView Grid.Row="1">
            <Grid x:Name="RecipesGrid"
                      Padding="14"
                      ColumnSpacing="10"
                      RowSpacing="10">
            </Grid>
        </ScrollView>

        <BoxView x:Name="DimBackground" BackgroundColor="Black" Opacity="0.5" IsVisible="False" InputTransparent="False"
                 Grid.RowSpan="2" ZIndex="10" />


        <views:RecipeDetailsModal x:Name="DetailsModal" IsVisible="False" Opacity="0" Grid.RowSpan="2" ZIndex="20"/>

        <views:EditRecipeModal x:Name="EditRecipeModal" IsVisible="False" Opacity="0" Grid.RowSpan="2" ZIndex="20"/>

        <local:CustomAlert x:Name="MyCustomAlert" Grid.RowSpan="2" ZIndex="20"/>

        <local:AddRecipeModal x:Name="AddModal" IsVisible="False" Grid.RowSpan="2" ZIndex="20"/>
    </Grid>

</ContentPage>
