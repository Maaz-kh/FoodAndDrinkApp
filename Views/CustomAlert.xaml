<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodAndDrinkApp.Views.CustomAlert"
             IsVisible="False">

    <Frame
         Padding="20"
         BackgroundColor="White"
         CornerRadius="20"
         HorizontalOptions="Center"
         VerticalOptions="Center"
         HasShadow="True"
         WidthRequest="280">

        <VerticalStackLayout Spacing="15">
            <Label
                 x:Name="AlertTitle"
                 Text="Title"
                 FontAttributes="Bold"
                 FontSize="18"
                 HorizontalOptions="Center" />

            <Label
                 x:Name="AlertMessage"
                 Text="Message"
                 FontSize="16"
                 TextColor="Black"
                 HorizontalOptions="Center"
                 HorizontalTextAlignment="Center" />

            <Button
                 Text="OK"
                 BackgroundColor="#4CAF50"
                 Margin="0,5,0,0"
                 TextColor="White"
                 CornerRadius="10"
                 WidthRequest="130"
                 HeightRequest="35"
                 FontSize="14"
                 Clicked="OnDismissClicked" />
            
        </VerticalStackLayout>
    </Frame>
</ContentView>
