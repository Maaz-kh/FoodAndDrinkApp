<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodAndDrinkApp"
             x:Class="FoodAndDrinkApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="InputEntryStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>

            <!-- Input Style for Editor -->
            <Style x:Key="InputEditorStyle" TargetType="Editor">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>

            <Style x:Key="ShortInputFrameStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Padding" Value="2,0,2,0" />
                <Setter Property="Margin" Value="2" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="#ccc" />
            </Style>

            <Style x:Key="LongInputFrameStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="Margin" Value="0,2" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="#ccc" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>