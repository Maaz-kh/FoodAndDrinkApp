<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodAndDrinkApp.Views.EditRecipeModal"
             xmlns:local="clr-namespace:FoodAndDrinkApp.Views">

    <Grid x:Name="AddRecipeModalGrid"
      BackgroundColor="#00000099"
      Padding="12">

        <Frame x:Name="EditformWrapper"
                BackgroundColor="White"
                CornerRadius="15"
                Padding="0"
                WidthRequest="{OnPlatform Android=300, WinUI=380}"
                HeightRequest="500"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                ZIndex="1">

            <Grid>

                <BoxView x:Name="DimBackground" BackgroundColor="Black" Opacity="0.4" IsVisible="False" InputTransparent="False" ZIndex="10" CornerRadius="15"/>
                <ScrollView VerticalScrollBarVisibility="Always"
                            Margin="0"
                            VerticalOptions="FillAndExpand"
                            Padding="14,16,14,16"
                            ZIndex="1">

                    <VerticalStackLayout Spacing="15">
                        <!-- Heading -->
                        <Label Text="Edit Recipe" 
                               FontSize="20"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="Black" /> 

                        <!-- Recipe Title -->
                        <Frame Style="{StaticResource ShortInputFrameStyle}">
                            <Entry x:Name="EditTitleEntry"
                           Placeholder="Recipe Title"
                           Style="{StaticResource InputEntryStyle}" />
                        </Frame>

                        <!-- Estimated Time -->
                        <Frame Style="{StaticResource ShortInputFrameStyle}">
                            <Entry x:Name="EditEstimatedTimeEntry"
                           Placeholder="Estimated Time (e.g. 30 mins)"
                           Style="{StaticResource InputEntryStyle}" />
                        </Frame>

                        <!-- Ingredients -->
                        <Frame Style="{StaticResource LongInputFrameStyle}">
                            <Editor x:Name="EditIngredientsEditor"
                            Placeholder="Ingredients"
                            HeightRequest="70"
                            AutoSize="TextChanges"
                            Style="{StaticResource InputEditorStyle}" />
                        </Frame>

                        <!-- Instructions -->
                        <Frame Style="{StaticResource LongInputFrameStyle}">
                            <Editor x:Name="EditInstructionsEditor"
                        Placeholder="Instructions"
                        HeightRequest="70"
                        AutoSize="TextChanges"
                        Style="{StaticResource InputEditorStyle}" />
                        </Frame>

                        <!-- Image Preview + Button -->
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Frame BackgroundColor="Transparent"
                                   CornerRadius="10"
                                   Padding="10"
                                   HasShadow="False"
                                   HeightRequest="150"
                                   WidthRequest="{OnPlatform Android=260, WinUI=300}"
                                   HorizontalOptions="Center"
                                   BorderColor="#ccc">

                                <Grid>
                                    <!-- Centered Preview Label -->
                                    <Label Text="Preview Image"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           TextColor="Gray"
                                           x:Name="EditPreviewPlaceholderLabel" />

                                    <!-- Actual Image (on top of label, initially hidden or transparent) -->
                                    <Image x:Name="EditRecipeImage"
                                           HeightRequest="120"
                                           HorizontalOptions="FillAndExpand"
                                           Aspect="AspectFit"
                                           Margin="0"
                                           Opacity="0" />
                                </Grid>
                            </Frame>

                            <!-- Select Image Button -->
                            <Button x:Name="EditImagePickBtn"
                                    Text="Select Image"
                                    BackgroundColor="#3F51B5"
                                    TextColor="White"
                                    Clicked="OnEditImagePickClicked" /> 
                        </VerticalStackLayout>

                        <Entry x:Name="EditImagePathEntry"
                       IsVisible="False" />

                        <!-- Action Buttons -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                            
                            <Button x:Name="CancelEditBtn"
                                    Text="Cancel"
                                    Clicked="OnCancelEditRecipeClicked"
                                    BackgroundColor="Gray"
                                    TextColor="White" />
                           
                            <Button x:Name="SaveEditBtn"
                                    Text="Edit"
                                    Clicked="OnEditRecipeClicked"
                                    BackgroundColor="#4CAF50"
                                    TextColor="White" />
                            
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Frame>
        <local:CustomAlert x:Name="MyCustomAlert" Grid.RowSpan="2" ZIndex="25"/>
    
    </Grid>
</ContentView>
