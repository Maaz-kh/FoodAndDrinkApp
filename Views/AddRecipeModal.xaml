<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FoodAndDrinkApp.Views"
             x:Class="FoodAndDrinkApp.Views.AddRecipeModal">

    <Grid x:Name="AddRecipeModalGrid"
          BackgroundColor="#00000099"
          Padding="12">

        <Frame x:Name="AddRecipeForm"
                    BackgroundColor="White"
                    CornerRadius="15"
                    Padding="0"
                    WidthRequest="{OnPlatform Android=300, WinUI=380}"
                    HeightRequest="500"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    ZIndex="1">
            <Grid>

                <BoxView x:Name="DimBackground" BackgroundColor="Black" Opacity="0.4" IsVisible="False" InputTransparent="False" ZIndex="10" CornerRadius="15"/>

                <ScrollView VerticalScrollBarVisibility="Always"
                    Margin="0"
                    VerticalOptions="FillAndExpand" ZIndex="1"
                    Padding="14,16,14,16">

                    <VerticalStackLayout Spacing="15" ZIndex="1">
                    <!-- Heading -->
                    <Label Text="Add New Recipe" 
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="Black" />

                    <!-- Recipe Title -->
                    <Frame Style="{StaticResource ShortInputFrameStyle}">
                        <Entry x:Name="titleEntry"
                               Placeholder="Recipe Title"
                               Style="{StaticResource InputEntryStyle}" />
                    </Frame>

                    <!-- Estimated Time -->
                    <Frame Style="{StaticResource ShortInputFrameStyle}">
                        <Entry x:Name="estimatedTimeEntry"
                               Placeholder="Estimated Time (e.g. 30 mins)"
                               Style="{StaticResource InputEntryStyle}" />
                    </Frame>

                    <!-- Ingredients -->
                    <Frame Style="{StaticResource LongInputFrameStyle}">
                        <Editor x:Name="ingredientsEditor"
                                Placeholder="Ingredients"
                                HeightRequest="70"
                                AutoSize="TextChanges"
                                Style="{StaticResource InputEditorStyle}" />
                    </Frame>

                    <!-- Instructions -->
                    <Frame Style="{StaticResource LongInputFrameStyle}">
                        <Editor x:Name="instructionsEditor"
                            Placeholder="Instructions"
                            HeightRequest="70"
                            AutoSize="TextChanges"
                            Style="{StaticResource InputEditorStyle}" />
                    </Frame>

                    <!-- Image Preview + Button -->
                    <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Frame BackgroundColor="Transparent"
                                   CornerRadius="10"
                                   Padding="10"
                                   HasShadow="False"
                                   HeightRequest="150"
                                   WidthRequest="{OnPlatform Android=260, WinUI=300}"
                                   HorizontalOptions="Center"
                                   BorderColor="#ccc">  
                                
                                <Grid>
                                    <!-- Centered Preview Label -->
                                    <Label Text="Preview Image"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           TextColor="Gray"
                                           x:Name="previewPlaceholderLabel" />

                                    <!-- Actual Image (on top of label, initially hidden or transparent) -->
                                    <Image x:Name="recipeImage"
                                           HeightRequest="120"
                                           HorizontalOptions="FillAndExpand"
                                           Aspect="AspectFit"
                                           Margin="0"
                                           Opacity="0" />   
                                </Grid>
                            </Frame>

                            <!-- Select Image Button -->
                            <Button x:Name="SelectImgBtn"
                                    Text="Select Image"
                                    BackgroundColor="#3F51B5"
                                    TextColor="White"
                                    Clicked="OnImagePickClicked" />
                            <Button x:Name="CaptureImgBtn"
                                    Text="Capture Image"
                                    BackgroundColor="#009688"
                                    TextColor="White"
                                    Clicked="OnCaptureImageClicked"
                                    IsVisible="{OnPlatform Android=true, iOS=true, WinUI=false}" /> 
                        </VerticalStackLayout>
                        

                    <Entry x:Name="imagePathEntry"
                           IsVisible="False" />

                    <!-- Action Buttons -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                            <Button x:Name="CancelAddBtn"
                                Text="Cancel"
                                Clicked="OnCancelAddRecipeClicked"
                                BackgroundColor="Gray"
                                TextColor="White" />
                            <Button x:Name="SaveAddBtn"
                                Text="Save"
                                Clicked="OnSaveRecipeClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                
            </ScrollView>
            </Grid>
        </Frame>
      
        <local:CustomAlert x:Name="MyCustomAlert" Grid.RowSpan="2" ZIndex="25"/>
    </Grid>

</ContentView>
